<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="palew1n.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:palew1n"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="palew1n">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid x:ConnectionId='2' x:Name="MainGrid"
              Visibility="Collapsed">
            <Grid.Resources>
                <Storyboard x:ConnectionId='17' x:Name="FadeInMainGridAnimation">
                    <DoubleAnimation Storyboard.TargetName="MainGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0.0"
                                     To="1.0"
                                     Duration="0:0:1"/>
                </Storyboard>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="450">
                <Image x:ConnectionId='18' x:Name="usbimg"
                       Source="/Assets/usb-dis.png"
                       Width="50"
                       Margin="0,0,0,10"/>
                <TextBlock x:ConnectionId='19' x:Name="ConnectText"
                           Text="Connect your iOS device before we begin"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock x:ConnectionId='20' x:Name="InfoText"
                           Text="It may take a moment before your device appears&#x0a;We ensure stability for palen1x itself"
                           FontSize="12"
                           Opacity="0.5"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,0"/>
                <muxc:TreeView x:ConnectionId='21' x:Name="devices"
                               Margin="20,20,20,30"
                               xmlns:muxc="using:Microsoft.UI.Xaml.Controls"/>
            </StackPanel>

            <ProgressBar Grid.Row="1"
                         IsIndeterminate="True"
                         Height="10"
                         Margin="50,0,50,20"
                         VerticalAlignment="Bottom"/>
        </Grid>


        <Grid x:ConnectionId='3' x:Name="LoadingScreen">
            <Grid.Resources>
                <Storyboard x:ConnectionId='13' x:Name="FadeOutLoadingScreenAnimation">
                    <DoubleAnimation Storyboard.TargetName="LoadingScreen"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1.0"
                                     To="0.0"
                                     Duration="0:0:0.5"/>
                </Storyboard>
            </Grid.Resources>
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="250">
                <TextBlock Text="Loading..."
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <ProgressBar IsIndeterminate="True"
                             Height="20"
                             Margin="0,0,0,8"/>
                <TextBlock x:ConnectionId='14' x:Name="StatusTextBlock"
                           Text="Checking system architecture"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center">
                    <TextBlock.Resources>
                        <Storyboard x:ConnectionId='15' x:Name="FadeOutStatusAnimation">
                            <DoubleAnimation Storyboard.TargetName="StatusTextBlock"
                                             Storyboard.TargetProperty="Opacity"
                                             From="1.0"
                                             To="0.0"
                                             Duration="0:0:0.5"/>
                        </Storyboard>
                        <Storyboard x:ConnectionId='16' x:Name="FadeInStatusAnimation">
                            <DoubleAnimation Storyboard.TargetName="StatusTextBlock"
                                             Storyboard.TargetProperty="Opacity"
                                             From="0.0"
                                             To="1.0"
                                             Duration="0:0:0.5"/>
                        </Storyboard>
                    </TextBlock.Resources>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid x:ConnectionId='4' x:Name="DownloadScreen"
              Visibility="Collapsed">
            <Grid.Resources>
                <Storyboard x:ConnectionId='5' x:Name="FadeInDownloadScreenAnimation">
                    <DoubleAnimation Storyboard.TargetName="DownloadScreen"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0.0"
                                     To="1.0"
                                     Duration="0:0:0.5"/>
                </Storyboard>
                <Storyboard x:ConnectionId='6' x:Name="FadeOutAnimation">
                    <DoubleAnimation Storyboard.TargetName="DownloadScreen"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1.0"
                                     To="0.0"
                                     Duration="0:0:1"/>
                </Storyboard>
            </Grid.Resources>
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="330">
                <TextBlock Text="Files not found"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="  Please download the files below&#x0a;They will automatically be attached"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <Button x:ConnectionId='7' x:Name="Palen1xButton"
                                                   
                        HorizontalAlignment="Center"
                        Width="200"
                        Margin="0,10,0,10"
                        HorizontalContentAlignment="Stretch">
                    <StackPanel Padding="0,5,0,5">
                        <TextBlock Text="palen1x"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                        <ProgressBar x:ConnectionId='12' x:Name="Palen1xProgress"
                                     Value="0"
                                     Minimum="0"
                                     Maximum="100"
                                     Height="5"
                                     Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='8' x:Name="QemuButton"
                                                
                        HorizontalAlignment="Center"
                        Width="200"
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Stretch">
                    <StackPanel Padding="0,5,0,5">
                        <TextBlock Text="qemu"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                        <ProgressBar x:ConnectionId='11' x:Name="QemuProgress"
                                     Value="0"
                                     Minimum="0"
                                     Maximum="100"
                                     Height="5"
                                     Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>
                <TextBlock x:ConnectionId='9' x:Name="ManualFindText"
                           Text="or manually find your folder"
                           FontSize="10"
                           FontWeight="Medium"
                           FontStyle="Italic"
                           Opacity="0.6"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           TextDecorations="Underline"/>

                <TextBlock x:ConnectionId='10' x:Name="CheckmarkText"
                           Text="✔"
                           FontSize="50"
                           FontWeight="Bold"
                           Foreground="ForestGreen"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

